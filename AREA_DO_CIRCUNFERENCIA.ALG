Algoritmo "area_do_circunferência"
// Autor(a)    : Bernardo Fernandes
// Data atual  : 21/9/2017
// Descrição   : Cálculo da area da circunferência
Var
   raio,area: real
Inicio
  escreva("Qual o raio?")
  leia(raio)

  area <- 3.14  * raio * raio
   escreva("A área é?", area)


Fimalgoritmo